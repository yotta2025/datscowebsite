
---
interface Props {
  title?: string;
}

const { title = "Datsco Resources Inc" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Datsco Resources Inc – Import & Export of Chemical Products and Smart Device Accessories" />

    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
    /* 全局字体与背景 */
    body {
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      color: #333;
      line-height: 1.6;
      margin: 0;
      padding: 0;
      background-color: #fdfdfd;
    }

    /* 导航栏样式 */
    header nav {
      display: flex;
      align-items: center;
      padding: 20px 40px;
      background-color: #004080;
      color: #fff;
    }

    header nav a {
      color: #fff;
      text-decoration: none;
    }

    header nav a:hover {
      text-decoration: underline;
    }

    header nav ul {
      list-style: none;
      display: flex;
      gap: 20px;
      margin-left: 30px;
      padding: 0;
    }

    main {
      padding: 40px 20px;
      max-width: 1000px;
      margin: 0 auto;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 20px;
      color: #004080;
    }

    h2 {
      font-size: 1.8rem;
      margin-top: 40px;
      margin-bottom: 15px;
      color: #004080;
    }

    p {
      margin-bottom: 15px;
    }

    ul li {
      margin-bottom: 10px;
    }

    footer {
      text-align: center;
      font-size: 0.9rem;
      color: #666;
    }
  </style>
  </head>

  <body>
  <header>
    <nav>
      <a href="/" style="display: flex; align-items: center; font-weight: bold; color: #fff; text-decoration: none;">
      <img src="/images/logo.jpg" alt="Datsco Resources Logo" style="height:40px; margin-right:10px;" />
      Datsco Resources Inc
    </a>
      <ul style="list-style: none; display: inline-flex; gap: 20px; margin-left: 30px;">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About Us</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href="/services">Services</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>
  </header>

  <main style="padding: 40px 20px;">
    <slot />
  </main>

  <footer style="margin-top: 60px; padding: 20px; border-top: 1px solid #ddd;">
    <p>© {new Date().getFullYear()} Datsco Resources Inc. All rights reserved.</p>
  </footer>
</body>
</html>