
---
interface Props {
  title?: string;
}

const { title = "Datsco Resources Inc" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Datsco Resources Inc – Import & Export of Chemical Products and Smart Device Accessories" />

    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
    /* 全局字体与背景 */
    body {
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      color: #333;
      line-height: 1.6;
      margin: 0;
      padding: 0;
      background-color: #fdfdfd;
    }

    /* 导航栏样式 */
    header nav {
      display: flex;
      align-items: center;
      padding: 20px 40px;
      background-color: #004080;
      color: #fff;
    }

    header nav a {
      color: #fff;
      text-decoration: none;
    }

    header nav a:hover {
      text-decoration: underline;
    }

    header nav ul {
      list-style: none;
      display: flex;
      gap: 20px;
      margin-left: 30px;
      padding: 0;
    }

    main {
      padding: 40px 20px;
      max-width: 1000px;
      margin: 0 auto;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 20px;
      color: #004080;
    }

    h2 {
      font-size: 1.8rem;
      margin-top: 40px;
      margin-bottom: 15px;
      color: #004080;
    }

    p {
      margin-bottom: 15px;
    }

    ul li {
      margin-bottom: 10px;
    }

    footer {
      text-align: center;
      font-size: 0.9rem;
      color: #666;
    }
  </style>
  </head>

  <body>
<header>
  <nav style="display: flex; justify-content: space-between; align-items: center; padding: 20px 40px; background-color: #004080; color: #fff;">
    
    <!-- 左侧 Logo + 公司名 -->
    <div style="display: flex; flex-direction: column; align-items: center;">
      <a href="/" style="display: flex; flex-direction: column; align-items: center; text-decoration: none; color: #fff;">
        <img src="/images/logo.png" alt="" style="height:50px; margin-bottom:5px;" />
        <span style="font-weight: bold;">Datsco Resources Inc</span>
      </a>
    </div>

    <!-- 右侧导航菜单 -->
    <ul style="list-style: none; display: flex; gap: 20px; margin: 0; padding: 0; align-items: center;">
      <li><a href="/" style="color:#fff; text-decoration:none;">Home</a></li>
      <li><a href="/about" style="color:#fff; text-decoration:none;">About Us</a></li>
      <li><a href="/products" style="color:#fff; text-decoration:none;">Products</a></li>
      <li><a href="/services" style="color:#fff; text-decoration:none;">Services</a></li>
      <li><a href="/contact" style="color:#fff; text-decoration:none;">Contact</a></li>
    </ul>

  </nav>
</header>

  <main style="padding: 40px 20px;">
    <slot />
  </main>

  <footer style="margin-top: 60px; padding: 20px; border-top: 1px solid #ddd;">
    <p>© {new Date().getFullYear()} Datsco Resources Inc. All rights reserved.</p>
  </footer>
</body>
</html>