---
import BaseLayout from "../layouts/BaseLayout.astro";
import { productCategories } from "../data/products";
---

<BaseLayout title="Products | Datsco Resources Inc">
  <style>
    .cards {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 24px;
      max-width: 1000px; /* 跟 BaseLayout main 一致 */
      margin: 0 auto;
    }
    .card {
      flex: 1 1 250px;
      background: #f7f7f7;
      padding: 20px;
      text-align: center;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      transition: transform 0.15s ease, box-shadow 0.15s ease;
    }
    .card:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(0,0,0,0.12);
    }
    .card img {
      width: 100px;
      height: 100px;
      object-fit: contain;
      margin-bottom: 15px;
    }
    .card h3 {
      margin: 0 0 10px;
      color: #004080;
    }
  </style>

  <h1 style="text-align:center; margin-bottom:30px;">Our Products</h1>

  <p style="text-align:center; max-width:800px; margin:0 auto 40px;">
    We supply a range of chemical products for industrial and commercial use.
    Our products serve multiple industries and are sourced from qualified manufacturers
    with international standards and customer specifications.
  </p>

  <section class="cards">
    {productCategories.map((c) => (
      <div class="card">
        <img src={c.image} alt={c.title} loading="lazy" />
        <h3>{c.title}</h3>
        <p>{c.short}</p>
        <a href={`/products/${c.slug}`} style="color:#004080; text-decoration:underline;">Learn More</a>
      </div>
    ))}
  </section>

  <p style="text-align:center; margin-top:45px; font-size:1.05rem;">
    For a <strong>full product list</strong>, please
    <a href="/files/full-product-list.pdf" target="_blank" style="color:#004080; text-decoration:underline;"> click here</a>.
  </p>
</BaseLayout>