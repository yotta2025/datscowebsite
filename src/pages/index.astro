---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Datsco Resources Inc">
  <!-- Hero Section -->
  <section style="
    background: url('/images/global-trade-bg.png') center/cover no-repeat;
    color: white;
    text-align: center;
    padding: 120px 20px;
  ">
    <h1 style="font-size:3rem; font-weight:bold; text-shadow: 2px 2px 4px rgba(0,0,0,0.7);">
      Datsco Resources Inc
    </h1>
    <p style="font-size:1.5rem; margin:20px 0; text-shadow: 1px 1px 3px rgba(0,0,0,0.6);">
      Connecting global markets through reliable sourcing, efficient logistics, and long-term partnerships.
    </p>
    <a href="/contact" style="
      display:inline-block;
      padding:12px 24px;
      background-color:#004080;
      color:white;
      text-decoration:none;
      font-weight:bold;
      border-radius:6px;
      box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
    ">Contact Us →</a>
  </section>

  <!-- Our Business - Chemical Products Only -->
  <section style="padding:60px 20px; max-width:1000px; margin:0 auto;">
    <h2 style="text-align:center; margin-bottom:40px; color:#004080;">Our Business</h2>
    <div style="display:flex; gap:30px; flex-wrap:wrap; justify-content:center;">
      <div style="flex:1 1 300px; text-align:center; border:1px solid #ddd; padding:20px; border-radius:8px;">
        <img src="/images/chemical-products.png" alt="Chemical Products" style="width:100%; max-height:180px; object-fit:cover; border-radius:4px;" />
        <h3>Chemical Products Import & Export</h3>
        <p>Supplying industrial and commercial chemical products to international markets with a focus on quality, compliance, and consistency.</p>
      </div>
    </div>
  </section>

  <!-- Why Work With Us -->
  <section style="padding:60px 20px; background-color:#f7f7f7;">
    <h2 style="text-align:center; margin-bottom:40px; color:#004080;">Why Work With Us</h2>
    <div style="display:flex; flex-wrap:wrap; justify-content:center; gap:20px; max-width:1000px; margin:0 auto;">
      <div style="flex:1 1 220px; text-align:center; padding:20px;">
        <img src="/images/icon-experience.png" alt="" style="width:60px; margin-bottom:10px;" />
        <p>Experienced in international trade and market coordination</p>
      </div>
      <div style="flex:1 1 220px; text-align:center; padding:20px;">
        <img src="/images/icon-supplier.png" alt="" style="width:60px; margin-bottom:10px;" />
        <p>Reliable supplier network and flexible sourcing solutions</p>
      </div>
      <div style="flex:1 1 220px; text-align:center; padding:20px;">
        <img src="/images/icon-communication.png" alt="" style="width:60px; margin-bottom:10px;" />
        <p>Clear communication and responsive customer support</p>
      </div>
      <div style="flex:1 1 220px; text-align:center; padding:20px;">
        <img src="/images/icon-partnership.png" alt="" style="width:60px; margin-bottom:10px;" />
        <p>Commitment to long-term, win-win partnerships</p>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section style="padding:80px 20px; background: linear-gradient(135deg, #004080, #0070c0); color:white; text-align:center;">
    <h2 style="font-size:2rem; margin-bottom:20px;">Let’s Work Together</h2>
    <p style="font-size:1.2rem; margin-bottom:30px;">Whether you are looking for a reliable supplier or exploring new markets, we are ready to support your business.</p>
    <a href="/contact" style="padding:14px 28px; background-color:white; color:#004080; font-weight:bold; border-radius:6px; text-decoration:none;">Contact Us →</a>
  </section>
</BaseLayout>